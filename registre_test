<body>
    <div class="container">
        <div class="header">
            <h1> ARMURERIE DE BLACKWATER </h1>
            <h2>Registre des Recettes</h2>
        </div>
        
        <div class="registre">
            <div class="registre-content">
                <div class="registre-title">üìñ LIVRE DE COMPTES üìñ</div>
                
                <div class="stats-bar">
                    <div class="stat">
                        <div class="stat-label">Total Recettes</div>
                        <div class="stat-value" id="totalRecettes">$0</div>
                    </div>
                    <div class="stat">
                        <div class="stat-label">Transactions</div>
                        <div class="stat-value" id="nbTransactions">0</div>
                    </div>
                    <div class="stat">
                        <div class="stat-label">Derni√®re MAJ</div>
                        <div class="stat-value" id="lastUpdate" style="font-size: 1.2em;">-</div>
                    </div>
                </div>
                
                <div id="content">
                    <div class="loading">‚è≥ Chargement du registre...</div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // ‚ö†Ô∏è CONFIGURATION : Remplace par l'ID de ton Google Sheet
        // L'ID se trouve dans l'URL : https://docs.google.com/spreadsheets/d/ABC123XYZ/edit
        // Copie juste la partie ABC123XYZ
        const SHEET_ID = '1zrqQ5iAxBM4x-wXYK4V7aiavcBylLdwai0M1rcAaX44';
        const SHEET_NAME = 'Recettes'; // Nom de l'onglet
        
        let currentPage = 1;
        const rowsPerPage = 20;
        let allData = [];
        
        // Fonction pour charger les donn√©es depuis Google Sheets
        async function loadData() {
            try {
                // Utiliser l'API Google Visualization (pas de probl√®me CORS)
                const url = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/gviz/tq?tqx=out:json&sheet=${SHEET_NAME}`;
                const response = await fetch(url);
                const text = await response.text();
                
                // Parser la r√©ponse JSON de Google (elle commence par google.visualization.Query.setResponse(...))
                const json = JSON.parse(text.substring(47).slice(0, -2));
                const rows = json.table.rows;
                
                console.log('Nombre total de lignes:', rows.length);
                
                allData = [];
                let totalRecettes = 0;
                
                // Parser les donn√©es - On commence √† la ligne 4 (index 3)
                // Ligne 1 (index 0) = Titre
                // Ligne 2 (index 1) = Vide
                // Ligne 3 (index 2) = En-t√™tes
                // Ligne 4+ (index 3+) = Donn√©es
                for (let i = 3; i < rows.length; i++) {
                    const cells = rows[i].c;
                    
                    // Ignorer les lignes vides
                    if (!cells) continue;
                    
                    const getValue = (cell) => {
                        if (!cell) return '';
                        if (cell.v !== null && cell.v !== undefined) {
                            // Si c'est une date, formater correctement
                            if (cell.v && typeof cell.v === 'object' && cell.v.toDateString) {
                                return cell.v.toLocaleDateString('fr-FR');
                            }
                            return String(cell.v);
                        }
                        if (cell.f) return cell.f; // Formule
                        return '';
                    };
                    
                    // Colonnes : A=Date, B=Description, C=Prix Unit, D=Quantit√©, E=Montant, F=Cat√©gorie, G=Employ√©
                    const date = getValue(cells[0]);
                    const description = getValue(cells[1]);
                    const prixUnit = parseFloat(getValue(cells[2])) || 0;
                    const quantite = parseInt(getValue(cells[3])) || 0;
                    let montant = parseFloat(getValue(cells[4])) || 0;
                    const categorie = getValue(cells[5]);
                    const employe = getValue(cells[6]);
                    
                    // Recalculer le montant si c'√©tait une formule ou si vide
                    if (montant === 0 && prixUnit > 0 && quantite > 0) {
                        montant = prixUnit * quantite;
                    }
                    
                    // Ajouter seulement si la ligne a du contenu significatif
                    // (au moins une date OU une description)
                    if (date && date.trim() !== '' || description && description.trim() !== '') {
                        console.log('Ligne', i, ':', {date, description, prixUnit, quantite, montant});
                        allData.push({
                            date: date,
                            description: description,
                            prixUnit: prixUnit,
                            quantite: quantite,
                            montant: montant,
                            categorie: categorie,
                            employe: employe
                        });
                        totalRecettes += montant;
                    }
                }
                
                console.log('Donn√©es charg√©es:', allData.length, 'lignes');
                
                // Mettre √† jour les stats
                document.getElementById('totalRecettes').textContent = `$${totalRecettes.toFixed(2)}`;
                document.getElementById('nbTransactions').textContent = allData.length;
                document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString('fr-FR');
                
                // Afficher les donn√©es
                displayPage(1);
                
            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('content').innerHTML = `
                    <div class="error">
                        ‚ùå Erreur de chargement<br><br>
                        ${error.message}<br><br>
                        <strong>V√©rifications :</strong><br>
                        1. As-tu bien remplac√© <code>TON_ID_GOOGLE_SHEET_ICI</code> par l'ID de ton Sheet ?<br>
                        2. Ton Sheet est-il partag√© en "Tous les utilisateurs disposant du lien" ?<br>
                        3. L'onglet s'appelle-t-il bien "Recettes" ?
                    </div>
                `;
            }
        }
        
        // Afficher une page de donn√©es
        function displayPage(page) {
            currentPage = page;
            const start = (page - 1) * rowsPerPage;
            const end = start + rowsPerPage;
            const pageData = allData.slice(start, end);
            
            let html = `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>üìÖ Date</th>
                                <th>üìù Description</th>
                                <th>üíµ Prix Unit.</th>
                                <th>üì¶ Quantit√©</th>
                                <th>üí∞ Montant</th>
                                <th>üè∑Ô∏è Cat√©gorie</th>
                                <th>üë§ Employ√©</th>
                            </tr>
                        </thead>
                        <tbody>
            `;
            
            pageData.forEach(row => {
                html += `
                    <tr>
                        <td>${row.date}</td>
                        <td>${row.description}</td>
                        <td>$${row.prixUnit.toFixed(2)}</td>
                        <td>${row.quantite}</td>
                        <td class="montant">$${row.montant.toFixed(2)}</td>
                        <td>${row.categorie}</td>
                        <td>${row.employe}</td>
                    </tr>
                `;
            });
            
            html += `
                        </tbody>
                    </table>
                </div>
            `;
            
            // Pagination
            const totalPages = Math.ceil(allData.length / rowsPerPage);
            if (totalPages > 1) {
                html += `
                    <div class="pagination">
                        <button onclick="displayPage(${page - 1})" ${page === 1 ? 'disabled' : ''}>
                            ‚¨ÖÔ∏è Pr√©c√©dent
                        </button>
                        <span style="font-size: 1.2em; color: #654321; margin: 0 20px;">
                            Page ${page} / ${totalPages}
                        </span>
                        <button onclick="displayPage(${page + 1})" ${page === totalPages ? 'disabled' : ''}>
                            Suivant ‚û°Ô∏è
                        </button>
                    </div>
                `;
            }
            
            document.getElementById('content').innerHTML = html;
        }
        
        // Charger les donn√©es au d√©marrage
        loadData();
        
        // Recharger toutes les 30 secondes
        setInterval(loadData, 30000);
    </script>
</body>
</html>
